<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Android Pizza Shop"
        android:textAlignment="center"
        android:textSize="32sp"
        android:textColor="#FFE01D3E"/>


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/icon_pizza"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Your Pizza Size" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RadioButton
            android:id="@+id/smalLRB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Small (RM 5)" />

        <RadioButton
            android:id="@+id/mediumRB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medium (RM10)" />

        <RadioButton
            android:id="@+id/largeRB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Large (RM15)" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Your Toppings:" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <CheckBox
                android:id="@+id/onionCB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Onions (RM1)" />

            <CheckBox
                android:id="@+id/oliveCB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Olives (RM2)" />

            <CheckBox
                android:id="@+id/tomatoCB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tomatoes (RM3)" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="10dp">
            <Button
                android:id="@+id/placeOrderBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="PLACE YOUR ORDER" />

        </LinearLayout>

        <TextView
            android:id="@+id/totalTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Order Price = "
            android:textAlignment="center"/>

    </RadioGroup>

</LinearLayout>